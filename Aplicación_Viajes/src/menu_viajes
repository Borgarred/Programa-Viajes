import java.util.Scanner;

public class menu_viajes extends Usuario {

	protected Usuario usuario;
	int tipo;
	String nombreHotel;
	String localidad;
	int fecha;
	int opcion;
	String parteViajar;
	int playa;

	public menu_viajes(Usuario usuario) {
	}

	public void menuViajes() {

		Scanner sc1 = new Scanner(System.in);
		System.out.println("Elige una opcion: \n(1)-Viajar \n(2)-Recomendaciones \n(3)-Sobre nosotros...");
		opcion = Integer.parseInt(sc1.nextLine());

		if (opcion > 3 || opcion < 1) {
			System.err.println("Elige una opcion correcta");
		}

		switch (opcion) {
		case 1: {
			System.out.println("---ORGANIZA TU VIAJE---");

			System.out.println("¿En que parte de España quieres viajar? (Comunidad Autonoma)");
			parteViajar = sc1.nextLine();

			if (parteViajar.equals("Andalucia")) {
				System.out.println("--OPCIONES PARA VIAJAR EN ANDALUCIA--");

				System.out.println("---VIAJE A CADIZ---");

				System.out.println("---VIAJE A CÓRDOBA---");
				break;
			}

			else if (parteViajar.equals("Canarias")) {
				System.out.println("--OPCIONES PARA VIAJAR EN CANARIAS--");
			}

			else if (parteViajar.equals("Madrid")) {
				System.out.println("--OPCIONES PARA VIAJAR EN MADRID--");

			}

			else if (parteViajar.equals("Galicia")) {
				System.out.println("--OPCIONES PARA VIAJAR EN GALICIA--");

			}

			else {
				System.err.println("Lo sentimos no hay viajes en " + parteViajar + " disponibles...");
			}
			break;
		}
		case 2: {
			System.out.println("---RECOMENDACIONES---");
			System.out.println("Para recomedarte el mejor destino para ti, necesitamos hacerte algunas preguntas");
			System.out.println("¿Prefieres un destino con playa?\n(1)Si \n(2)No");
			playa = Integer.parseInt(sc1.nextLine());
			System.out.println("¿Prefieres un destino en la peninsula?\n(1)Si \n(2)No");
			int destino = Integer.parseInt(sc1.nextLine());
			
			if (playa == 1 && destino == 1) {
				System.out.println("--VIAJE A ANDALUCIA--");
			}
			
			else if (playa == 1 && destino == 2) {
				System.out.println("--VIAJE A CANARIAS--");

			}
			
			else if( playa == 2 && destino == 1) {
				System.out.println("--VIAJE A MADRID--");

			}
			
			else if( playa == 2 && destino == 2) {
				System.err.println("Lo sentimos no hay viajes disponibles sin playa y fuera de la peninsula...");

			}
		
			
			break;
		}

		case 3: {
			System.out.println("---SOBRE NOSOTROS---");
			break;
		}

		}
	}

}
