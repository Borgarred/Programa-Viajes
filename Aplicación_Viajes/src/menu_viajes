	public boolean menuDestino() {

		Scanner escaner1 = new Scanner(System.in);

		boolean resultado = true;

		System.out.println("---ORGANIZA TU VIAJE--- \nÂ¿En que parte de EspaÃ±a quieres viajar? (Comunidad Autonoma)");
		this.comunidad = escaner1.nextLine();

		if (this.comunidad.equals("AndalucÃ­a")) {
			System.out.println();
			System.out.print("--OPCIONES PARA VIAJAR EN ANDALUCIA--"
					+ "\nPara el destino AndalucÃ­a tenemos viajes a Cadiz o CÃ³rdoba"
					+ "\nÂ¿QuÃ© destino prefieres? \n(1)Cadiz \n(2)CÃ³rdoba \nOpciÃ³n: ");
			destino = escaner1.nextInt();
		}
		else if (comunidad.equals("Canarias")) {
			System.out.println();
			System.out.print("--OPCIONES PARA VIAJAR EN CANARIAS--"
					+ "\nPara el destino Canarias tenemos viajes a Tenerife o La Palma"
					+ "\nÂ¿QuÃ© destino prefieres? \n(1)Tenerife \n(2)La Palma \nOpciÃ³n: ");
			destino = escaner1.nextInt();
		}
		else if (comunidad.equals("Madrid")) {
			System.out.println();
			System.out.print("--OPCIONES PARA VIAJAR EN MADRID--"
					+ "Para el destino Madrid tenemos viajes a Madrid Capital o Getafe"
					+ "\nÂ¿QuÃ© destino prefieres? \n(1)Madrid Capital \n(2)Getafe \nOpciÃ³n: ");
			destino = escaner1.nextInt();
		}
		else if (comunidad.equals("Extremadura")) {
			System.out.println();
			System.out.print("--OPCIONES PARA VIAJAR EN EXTREMADURA--"
					+ "\nPara el destino Extremadura tenemos viajes a CÃ¡ceres o Badajoz"
					+ "\nÂ¿QuÃ© destino prefieres? \n(1)CÃ¡ceres \n(2)Badajoz \nOpciÃ³n: ");
			destino = escaner1.nextInt();
		}
		else {
			System.err.println("Lo sentimos no hay viajes en " + comunidad + " disponibles...");
			System.out.println();
			
			resultado = false;
		}

		return resultado;
	}

	public void menuFecha() {
		Scanner escaner2 = new Scanner(System.in);

		System.out.println();
		System.out.print("Â¡Perfecto! Vamos a elegir fechas para tu estancia: \nIntroduce en que mes vas a viajar: ");
		String mes = escaner2.nextLine();

		System.out.print("Selecciona la fecha de entrada: ");
		int diaIda = escaner2.nextInt();

		System.out.print("Selecciona la fecha de salida: ");
		int diaVuelta = escaner2.nextInt();

		System.out.println();
		System.out.println("Â¡Ya hemos organizado tu viaje! \nViaje a " + this.destino + " en el mes de " + mes
				+ ", desde el dia " + diaIda + " hasta el dia " + diaVuelta);
		System.out.println();
	}

	public void menuRecomendaciones() {

		Scanner escaner3 = new Scanner(System.in);

		System.out.print("---RECOMENDACIONES---"
				+ "\nPara recomedarte el mejor destino para ti, necesitamos hacerte algunas preguntas"
				+ "Â¿Prefieres un destino con playa?\n(1)Si \n(2)No \nOpciÃ³n: ");
		playa = escaner3.nextInt();
		System.out.println();
		System.out.print("Â¿Prefieres un destino en la peninsula?\n(1)Si \n(2)No \nOpciÃ³n:");
		this.destino = escaner3.nextInt();
		System.out.println();

		if (playa == 1 && destino == 1) {
			System.out.println(
					"La mejor opcion para ti, es un viaje a AndalucÃ­a. \nPara organizar tu viaje pulsa la opcion Viajar");
			System.out.println();
		}

		else if (playa == 1 && destino == 2) {
			System.out.println(
					"La mejor opcion para ti, es un viaje a Canarias. \nPara organizar tu viaje pulsa la opcion Viajar");
			System.out.println();

		}

		else if (playa == 2 && destino == 1) {
			System.out.println("Â¿Prefieres un destino en la capital?\n(1)Si \n(2)No \nOpciÃ³n: ");
			int peninsula = escaner3.nextInt();
			System.out.println();
			if (peninsula == 1) {
				System.out.println(
						"La mejor opcion para ti, es un viaje a Madrid. \nPara organizar tu viaje pulsa la opcion Viajar");
				System.out.println();
			} else if (peninsula == 2) {
				System.out.println(
						"La mejor opcion para ti, es un viaje a Extremadura. \nPara organizar tu viaje pulsa la opcion Viajar");
				System.out.println();

			}
		}

		else if (playa == 2 && destino == 2) {
			System.err.println("Lo sentimos no hay viajes disponibles sin playa y fuera de la peninsula...");
			System.out.println();
		} else {

			System.err.println("Por favor introduce una opciÃ³n correcta");

		}
	}

	public void menuSorteo() {

		Scanner sc = new Scanner(System.in);

		Stack<String> pila = new Stack<>();

		// Agregar elementos a la pila
		pila.push("ğŸ");
		pila.push("ğŸ");
		pila.push("ğŸ");
		Queue<String> cola = new LinkedList<>();

		// Agregar elementos a la cola
		cola.add("ğŸ");
		cola.add("ğŸ");
		cola.add("ğŸ");

		// Imprimir la pila
		System.out.println("Â¡Estamos sorteando un viaje a Mallorca!");
		System.out.println("Para participar solo tienes que elegir un regalo, Â¡Suerte!");
		System.out.println(pila);

		System.out.println("Elige un regalo del 1 al 3: ");
		int numeroRegalo = sc.nextInt();
		if (numeroRegalo == 1 || numeroRegalo == 2 || numeroRegalo == 3) {
			switch (numeroRegalo) {
			case 1: {
				// Eliminar un elemento de la pila
				String eliminado = pila.pop();
				System.out.println("Â¡FELICIDADES! \nERES EL GANADOR DEL VIAJE A MALLORCA");
				System.out.println("Introduce tu email para enviarte proximamente todos los datos: ");
				String email = sc.nextLine();
				System.out.println("Â¡Perfecto, espera nuestra respuesta pronto!");
				System.out.println();
				break;
			}
			case 2: {
				System.out.println("Lo sentimos ese regalo no tiene premio...");
				System.out.println();

				break;
			}
			case 3: {
				System.out.println("Lo sentimos ese regalo no tiene premio...");
				System.out.println();

				break;
			}

			}
		} else {
			System.err.println("Elige un regalo entre el 1 al 3");
			System.out.println();
		}
	}

}
