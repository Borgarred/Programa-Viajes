package Aplicacion_Viajes;
import java.util.Scanner;

public class Main {
	public static void main(String[] args) {
		menu_principal Menu1 = new menu_principal();
		Usuario usuario0 = new Usuario(); //Sin argumentos
		
		menu_viajes viajes = new menu_viajes();
		
		int indice_usuario = 0;
		
		boolean salir = false, salir1=false, salir2=false;

		while (salir == false) {
			Menu1.MenuInicio();
			switch (Menu1.opcion1) {
				case 1: {
					usuario0.NuevoUsuario();
					System.out.println();
					break;
				}
				case 2: {
							
						indice_usuario = usuario0.IniciarSesion();
							
						if (indice_usuario == -1) {
							//Aviso de que no está registrado ese usuario
							System.err.println("USUARIO NO REGISTRADO");		
						}
						else {
							salir = true;
						}
				}
			}
		}
		System.out.println();
		
		while (salir2 == false) {
			//Si el numero introducido es 4 deberá salir de la aplicación
			if (Menu1.opcion2 == 4) {
				break;
			}
			Menu1.MenuViajes(indice_usuario, usuario0);
			
			//Switch de la aplicacion completa con los metodos que deberán salir
			switch (Menu1.opcion2) {
				case 1: {
					viajes.menuDestino();
					viajes.menuFecha();
					break;
				}
				case 2: {
					viajes.menuRecomendaciones();
					break;
				}
				case 3: {
					viajes.menuSorteo();
					break;
				}
				case 4: {
					System.out.println("¡Gracias por visitarnos, hasta pronto!");
					salir2 = true;
					break;
				}
			}
		}
	}
}
